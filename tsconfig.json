{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                            // Set ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"],      // Include DOM and modern JS libraries
    "jsx": "react-jsx",                            // Use the new JSX transform (React 17+)

    /* Modules */
    "module": "esnext",                            // Use ESNext module syntax
    "moduleResolution": "node",                    // Resolve modules using Node.js strategy
    "baseUrl": ".",                                // Base directory for non-relative imports
    "paths": {
      "@/*": ["src/*"]                             // Alias for cleaner imports
    },
    "resolveJsonModule": true,                     // Allow importing JSON files
    "esModuleInterop": true,                       // Better compatibility for CommonJS modules
    "allowSyntheticDefaultImports": true,          // Support default imports even if module doesn't export default
    "forceConsistentCasingInFileNames": true,      // Catch case-mismatch issues across platforms

    /* Emit */
    "outDir": "./dist",                            // Output directory for compiled JS
    "sourceMap": true,                             // Generate source maps for debugging
    "declaration": true,                           // Generate .d.ts files
    "declarationMap": true,                        // Map for declarations
    "removeComments": true,                        // Strip comments from output

    /* Strict Type-Checking Options */
    "strict": true,                                // Enable all strict type checking
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* JS Interop */
    "allowJs": true,                               // Allow JavaScript files in compilation
    "checkJs": false,                              // Don't report errors in JS files
    "skipLibCheck": true                           // Skip type checking of all declaration files
  },
  "include": ["src"],                              // Include your source code directory
  "exclude": ["node_modules", "dist"]              // Exclude these folders from compilation
}
